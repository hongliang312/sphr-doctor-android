             android:layout_below="@+id/r2"
             android:layout_width="match_parent"
             android:layout_height="0.5dp"/>

         <View
             android:id="@+id/v2"
             android:background="#000"
             android:layout_below="@+id/r2"
             android:layout_width="match_parent"
             android:layout_height="0.5dp"/>
