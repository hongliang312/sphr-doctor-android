<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lightheart.sphr.doctor.module.home.activity.TestDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/sky_blue4"
        android:orientation="horizontal"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="试验管理"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_18"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_15"
            />


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         >

    <RelativeLayout
        android:id="@+id/rela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        >

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="北京阳光欣晴将康管理有限责任公司北京阳光欣晴将康管理有限责任公司"
            android:layout_marginLeft="@dimen/dp_15"
            android:textSize="@dimen/dp_19"
            android:layout_marginTop="@dimen/dp_5"
            />

        <TextView
            android:id="@+id/tiemm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="试验时间:"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_below="@+id/title"
            android:layout_marginTop="@dimen/dp_15"
            android:textColor="@color/colorDayTextLight"
            android:textSize="@dimen/dp_16"
            />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-12-03-2018-01-29"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_below="@+id/title"
            android:layout_toRightOf="@+id/tiemm"
            android:layout_marginTop="@dimen/dp_15"
            android:textColor="@color/sky_blue2"
            android:textSize="@dimen/dp_16"
            />

        <TextView
            android:id="@+id/numberr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="招募人数:"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_below="@+id/time"
            android:layout_marginTop="@dimen/dp_15"
            android:textColor="@color/colorDayTextLight"
            android:textSize="@dimen/dp_16"
            />

        <TextView
            android:id="@+id/numb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="454 人"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_below="@+id/time"
            android:layout_toRightOf="@+id/numberr"
            android:layout_marginTop="@dimen/dp_15"
            android:textColor="@color/sky_blue2"
            android:textSize="@dimen/dp_16"
            />

        <TextView
            android:id="@+id/indicationn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="适  应  症:"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_below="@+id/numb"
            android:layout_marginTop="@dimen/dp_15"
            android:textColor="@color/colorDayTextLight"
            android:textSize="@dimen/dp_16"
            />

        <TextView
            android:id="@+id/Indication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="疑难杂症所有者"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_below="@+id/numb"
            android:layout_toRightOf="@+id/indicationn"
            android:layout_marginTop="@dimen/dp_15"
            android:textColor="@color/sky_blue2"
            android:textSize="@dimen/dp_16"
            />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_6"
        android:layout_below="@+id/rela"
        android:layout_marginTop="@dimen/dp_25"
        android:background="@color/colorDayTextLight"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="研究目"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_30"
            android:textColor="@color/colorDayTextLight"
            android:textSize="@dimen/dp_19"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_6"
            android:background="@color/colorDayTextLight"
            />

        <TextView
            android:id="@+id/COronary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="研究冠心病"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"
            android:textSize="@dimen/dp_19"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@color/colorDayTextLight"
            />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        >

        <TextView
            android:id="@+id/ProjectSponsorr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="项目主办方:"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/colorDayTextLight"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/dp_16"
            />

        <TextView
            android:id="@+id/ProJectSponsor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="      北京阳光欣晴"
            android:layout_toRightOf="@+id/ProjectSponsorr"
            android:textColor="@color/sky_blue2"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/dp_16"
            />

        <TextView
            android:id="@+id/Projectorganizerr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="项目承办方:"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_below="@+id/ProjectSponsorr"
            android:textColor="@color/colorDayTextLight"
            android:textSize="@dimen/dp_16"
            />

        <TextView
            android:id="@+id/Projectorganizer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="        301 "
            android:layout_toRightOf="@+id/ProjectSponsorr"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_below="@+id/ProjectSponsorr"
            android:textColor="@color/sky_blue2"
            android:textSize="@dimen/dp_16"
            />

        <TextView
            android:id="@+id/projectPii"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="项   目    PI  :"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_below="@+id/Projectorganizerr"
            android:textColor="@color/colorDayTextLight"
            android:textSize="@dimen/dp_16"
            />

        <TextView
            android:id="@+id/Projecttestphasee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/projectPii"
            android:layout_alignBottom="@+id/projectPii"
            android:layout_toEndOf="@+id/Projectorganizerr"
            android:text="             "
            android:layout_marginTop="@dimen/dp_20"
            android:textSize="@dimen/dp_16"
            />


        <TextView
            android:id="@+id/Projecttestphase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="项 目 阶 段 :"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_below="@+id/projectPii"
            android:textColor="@color/colorDayTextLight"
            android:textSize="@dimen/dp_16"
            />

        <TextView
            android:id="@+id/ProJectPI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="         IV期 "
            android:layout_toRightOf="@+id/Projecttestphase"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_below="@+id/projectPii"
            android:textColor="@color/sky_blue2"
            android:textSize="@dimen/dp_16"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_25"
        android:background="@color/colorDayTextLight"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="为确保信息的时效性以下信息每天更新"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/dp_16"
            />

    </RelativeLayout>

         <RelativeLayout
             android:id="@+id/r1"
             android:background="#00669A"
             android:layout_width="match_parent"
             android:layout_height="100dp"
             android:layout_marginLeft="@dimen/dp_6"
             android:layout_marginRight="@dimen/dp_6"
             >
             <LinearLayout
                 android:orientation="horizontal"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">
                 <TextView
                     android:layout_weight="1"
                     android:textColor="#fff"
                     android:gravity="center"
                     android:text="项目地点"
                     android:layout_width="0dp"
                     android:layout_height="match_parent" />
                 <View
                     android:background="#fff"
                     android:layout_width="0.5dp"
                     android:layout_height="match_parent"/>
                 <TextView
                     android:textColor="#fff"
                     android:gravity="center"
                     android:text="研究者"
                     android:layout_weight="2"
                     android:layout_width="0dp"
                     android:layout_height="match_parent" />
                 <View
                     android:background="#fff"
                     android:layout_width="0.5dp"
                     android:layout_height="match_parent"/>
                 <TextView
                     android:textColor="#fff"
                     android:gravity="center"
                     android:text="计划受试者人数"
                     android:layout_weight="1"
                     android:layout_width="0dp"
                     android:layout_height="match_parent" />
                 <View
                     android:background="#fff"
                     android:layout_width="0.5dp"
                     android:layout_height="match_parent"/>
                 <TextView
                     android:textColor="#fff"
                     android:gravity="center"
