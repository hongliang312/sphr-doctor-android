                     android:background="#fff"
                     android:layout_width="0.5dp"
                     android:layout_height="match_parent"/>
                 <TextView
                     android:textColor="#fff"
                     android:gravity="center"
                     android:text="入组率"
                     android:layout_weight="1.5"
                     android:layout_width="0dp"
                     android:layout_height="match_parent" />
                 <View
                     android:background="#fff"
                     android:layout_width="0.5dp"
                     android:layout_height="match_parent"/>
                 <TextView
                     android:textColor="#fff"
                     android:gravity="center"
                     android:text="状态"
                     android:layout_weight="1.5"
                     android:layout_width="0dp"
                     android:layout_height="match_parent" />
                 <View
                     android:background="#fff"
                     android:layout_width="0.5dp"
                     android:layout_height="match_parent"/>
                 <TextView
                     android:textColor="#fff"
                     android:gravity="center"
                     android:text="是否启动"
                     android:layout_weight="1"
                     android:layout_width="0dp"
                     android:layout_height="match_parent" />
                 <View
                     android:background="#fff"
                     android:layout_width="0.5dp"
                     android:layout_height="match_parent"/>
                 <TextView
                     android:textColor="#fff"
                     android:gravity="center"
                     android:text="提前退出人数"
                     android:layout_weight="1"
                     android:layout_width="0dp"
                     android:layout_height="match_parent" />
             </LinearLayout>
         </RelativeLayout>
