<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#efefef"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/mainBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="false"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:elevation="@dimen/dp_0">

            <include layout="@layout/common_toolbar" />
        </android.support.design.widget.AppBarLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/bg_my_page"
                android:contentDescription="@string/my_page" />


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_110"
                android:padding="@dimen/dp_10"
                app:cardCornerRadius="@dimen/dp_5"
                app:cardElevation="@dimen/dp_2"
                app:contentPadding="@dimen/dp_5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingEnd="@dimen/dp_10"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_30">

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:paddingBottom="@dimen/dp_12"
                        android:textColor="@color/title_black"
                        android:textSize="@dimen/big_small"
                        android:textStyle="bold"
                        tools:text="@string/appName" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvDepartment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingEnd="@dimen/dp_6"
                            android:paddingStart="@dimen/dp_6"
                            android:textColor="@color/fiveEight"
                            android:textSize="@dimen/small"
                            tools:text="@string/appName" />

                        <TextView
                            android:id="@+id/tvTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingEnd="@dimen/dp_6"
                            android:paddingStart="@dimen/dp_6"
                            android:textColor="@color/fiveEight"
                            android:textSize="@dimen/micro"
                            tools:text="@string/appName" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvHospital"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:paddingBottom="@dimen/dp_12"
                        android:paddingTop="@dimen/dp_12"
                        android:textColor="@color/fiveEight"
                        android:textSize="@dimen/small"
                        tools:text="@string/appName" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_05"
                        android:background="@color/divide" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/dp_12"
                        android:paddingTop="@dimen/dp_12">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvOutNum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="@dimen/dp_4"
                                android:paddingEnd="@dimen/dp_6"
                                android:paddingStart="@dimen/dp_6"
                                android:textColor="@color/theme_color"
                                android:textSize="@dimen/medium"
                                tools:text="@string/num" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingEnd="@dimen/dp_6"
                                android:paddingStart="@dimen/dp_6"
                                android:paddingTop="@dimen/dp_4"
                                android:text="@string/outside_num"
                                android:textColor="@color/theme_color"
                                android:textSize="@dimen/small" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvOperatNum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="@dimen/dp_4"
                                android:paddingEnd="@dimen/dp_6"
                                android:paddingStart="@dimen/dp_6"
                                android:textColor="@color/theme_color"
                                android:textSize="@dimen/medium"
                                tools:text="@string/num" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingEnd="@dimen/dp_6"
                                android:paddingStart="@dimen/dp_6"
                                android:paddingTop="@dimen/dp_4"
                                android:text="@string/operation_num"
                                android:textColor="@color/theme_color"
                                android:textSize="@dimen/small" />

                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_05"
                        android:background="@color/divide" />

                    <TextView
                        android:id="@+id/tvGoodAt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/dp_12"
                        android:paddingEnd="@dimen/dp_6"
                        android:paddingStart="@dimen/dp_6"
                        android:paddingTop="@dimen/dp_14"
                        android:text="@string/good_at"
                        android:textColor="@color/theme_color"
                        android:textSize="@dimen/small" />

                    <TextView
                        android:id="@+id/tvDes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/dp_20"
                        android:paddingEnd="@dimen/dp_6"
                        android:paddingStart="@dimen/dp_6"
                        android:textColor="@color/fiveEight"
                        android:textSize="@dimen/small"
                        tools:text="擅长擅长擅长擅长擅长擅长擅长" />

                    <TextView
                        android:id="@+id/tvAddFriend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:background="@drawable/bg_theme_round"
                        android:paddingBottom="@dimen/dp_8"
                        android:paddingEnd="@dimen/dp_28"
                        android:paddingStart="@dimen/dp_28"
                        android:paddingTop="@dimen/dp_8"
                        android:text="@string/addFriend"
                        android:textColor="@color/theme_color"
                        android:textSize="@dimen/small"
                        android:visibility="gone" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/clvHeadImage"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_80"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_50"
                android:elevation="@dimen/dp_4"
                android:src="@mipmap/ic_user" />
        </FrameLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>