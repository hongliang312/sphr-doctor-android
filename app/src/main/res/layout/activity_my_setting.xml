<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgound_color"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/mainBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="false"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:elevation="@dimen/dp_0">

            <include layout="@layout/common_toolbar" />
        </android.support.design.widget.AppBarLayout>

        <TextView
            android:id="@+id/tvModifyPsd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@android:color/white"
            android:drawableEnd="@mipmap/ic_open"
            android:padding="@dimen/dp_14"
            android:text="@string/modifyPsd"
            android:textColor="@color/fiveEight"
            android:textSize="@dimen/small" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_05"
            android:background="@color/divide" />

        <TextView
            android:id="@+id/tvMessageSet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:drawableEnd="@mipmap/ic_open"
            android:padding="@dimen/dp_14"
            android:text="@string/message_set"
            android:textColor="@color/fiveEight"
            android:textSize="@dimen/small" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_05"
            android:background="@color/divide" />

        <TextView
            android:id="@+id/tvCurrentVersion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:drawableEnd="@mipmap/ic_open"
            android:padding="@dimen/dp_14"
            android:text="@string/current_version"
            android:textColor="@color/fiveEight"
            android:textSize="@dimen/small" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_05"
            android:background="@color/divide" />

        <TextView
            android:id="@+id/tvLogOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_14"
            android:layout_marginStart="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_40"
            android:background="@color/theme_color"
            android:gravity="center_horizontal"
            android:padding="@dimen/dp_12"
            android:text="@string/log_out"
            android:textColor="@android:color/white"
            android:textSize="@dimen/small" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>