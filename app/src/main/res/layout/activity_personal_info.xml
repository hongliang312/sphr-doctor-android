<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#efefef"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/mainBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="false"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:elevation="@dimen/dp_0">

            <include layout="@layout/common_toolbar" />
        </android.support.design.widget.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llHeaderImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_14">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/header_image"
                        android:textColor="@color/fiveEight"
                        android:textSize="@dimen/big_small" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/clvHeadImage"
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_50"
                        android:layout_marginEnd="@dimen/dp_18"
                        android:src="@mipmap/ic_user" />

                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_6"
                    android:background="@android:color/background_light"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_14">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/etName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="@string/person_name"
                        android:inputType="text"
                        android:paddingTop="@dimen/dp_12"
                        android:textSize="@dimen/big_small" />

                </android.support.design.widget.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_05"
                    android:background="@color/divide" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tILSex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/background_light"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_14">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/etSex"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:enabled="false"
                        android:hint="@string/sex"
                        android:inputType="text"
                        android:paddingTop="@dimen/dp_12"
                        android:textColor="@color/title_black"
                        android:textSize="@dimen/big_small" />

                </android.support.design.widget.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_05"
                    android:background="@color/divide" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tILBirth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/background_light"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_14">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/etBirth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:enabled="false"
                        android:hint="@string/birth"
                        android:inputType="text"
                        android:paddingTop="@dimen/dp_12"
                        android:textColor="@color/title_black"
                        android:textSize="@dimen/big_small" />

                </android.support.design.widget.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_05"
                    android:background="@color/divide" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tILDistract"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/background_light"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_14">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/etDistract"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:enabled="false"
                        android:hint="@string/distract"
                        android:inputType="text"
                        android:paddingTop="@dimen/dp_12"
                        android:textColor="@color/title_black"
                        android:textSize="@dimen/big_small" />

                </android.support.design.widget.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_05"
                    android:background="@color/divide" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tILHospital"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/background_light"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_14">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/etHospital"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:enabled="false"
                        android:hint="@string/hospital"
                        android:inputType="text"
                        android:paddingTop="@dimen/dp_12"
                        android:textColor="@color/title_black"
                        android:textSize="@dimen/big_small" />

                </android.support.design.widget.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_05"
                    android:background="@color/divide" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tILDepartment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/background_light"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_14">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/etDepartment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:enabled="false"
                        android:hint="@string/department"
                        android:inputType="text"
                        android:paddingTop="@dimen/dp_12"
                        android:textColor="@color/title_black"
                        android:textSize="@dimen/big_small" />

                </android.support.design.widget.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_05"
                    android:background="@color/divide" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tILTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/background_light"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_14">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/etTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:enabled="false"
                        android:hint="@string/professional_title"
                        android:inputType="text"
                        android:paddingTop="@dimen/dp_12"
                        android:textColor="@color/title_black"
                        android:textSize="@dimen/big_small" />

                </android.support.design.widget.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_05"
                    android:background="@color/divide" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/background_light"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_14">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/etMajor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="@string/major"
                        android:inputType="text"
                        android:paddingTop="@dimen/dp_12"
                        android:textSize="@dimen/big_small" />

                </android.support.design.widget.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_05"
                    android:background="@color/divide" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/background_light"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_14">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/etPersonalIntroduce"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="@string/personal_introduce"
                        android:inputType="text"
                        android:paddingTop="@dimen/dp_12"
                        android:textSize="@dimen/big_small" />

                </android.support.design.widget.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_05"
                    android:background="@color/divide" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/background_light"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_14">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/etOutsideNum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="@string/outside_num"
                        android:inputType="text"
                        android:paddingTop="@dimen/dp_12"
                        android:textSize="@dimen/big_small" />

                </android.support.design.widget.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_05"
                    android:background="@color/divide" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/background_light"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_14">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/etOperationNum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="@string/operation_num"
                        android:inputType="text"
                        android:paddingTop="@dimen/dp_12"
                        android:textSize="@dimen/big_small" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>