<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dp_120"
    android:layout_marginEnd="@dimen/dp_14"
    android:background="@mipmap/add_contact_pop"
    android:orientation="vertical"
    android:padding="@dimen/dp_8">

    <TextView
        android:id="@+id/tvAddByPhone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:drawablePadding="@dimen/dp_8"
        android:drawableStart="@mipmap/ic_phone"
        android:gravity="center_vertical"
        android:text="@string/add_phone"
        android:textColor="@android:color/white"
        android:textSize="@dimen/small" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_05"
        android:background="@android:color/white" />

    <TextView
        android:id="@+id/tvScan"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:drawablePadding="@dimen/dp_8"
        android:drawableStart="@mipmap/ic_scan"
        android:gravity="center_vertical"
        android:text="@string/scan"
        android:textColor="@android:color/white"
        android:textSize="@dimen/small" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_05"
        android:background="@android:color/white" />

    <TextView
        android:id="@+id/tvQrCode"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:drawablePadding="@dimen/dp_8"
        android:drawableStart="@mipmap/ic_qrcode"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/dp_36"
        android:text="@string/qr_code"
        android:textColor="@android:color/white"
        android:textSize="@dimen/small" />


</LinearLayout>