<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgound_color"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        android:background="@android:color/background_light"
        android:orientation="horizontal"
        android:padding="@dimen/dp_14">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/etPanelName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/panel_name"
            android:inputType="text"
            android:paddingTop="@dimen/dp_12"
            android:textSize="@dimen/big_small" />

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:id="@+id/llDiseaseSelect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_6"
        android:background="@android:color/background_light"
        android:orientation="horizontal"
        android:padding="@dimen/dp_14">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/disease_select"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/big_small" />

        <TextView
            android:id="@+id/tvDisease"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableEnd="@mipmap/ic_open"
            android:drawablePadding="@dimen/dp_6"
            android:gravity="end"
            android:paddingEnd="@dimen/dp_0"
            android:paddingStart="@dimen/dp_18"
            android:textColor="@color/eight"
            android:textSize="@dimen/big_small"
            tools:text="@string/disease_select" />

    </LinearLayout>

</LinearLayout>