<?xml version="1.0" encoding="utf-8"?>
<com.lightheart.sphr.doctor.view.SlidingButtonView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_70"
    android:layout_marginBottom="@dimen/dp_05"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/item_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="@dimen/dp_4"
                android:paddingStart="@dimen/dp_10"
                android:paddingTop="@dimen/dp_8"
                android:textColor="@color/title_black"
                android:textSize="@dimen/big_small"
                tools:ignore="RtlSymmetry"
                tools:text="@string/title_contract" />

            <TextView
                android:id="@+id/tvAccept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_14"
                android:background="@drawable/bg_theme_round"
                android:paddingBottom="@dimen/dp_4"
                android:paddingEnd="@dimen/dp_10"
                android:paddingStart="@dimen/dp_10"
                android:paddingTop="@dimen/dp_4"
                android:text="@string/agree"
                android:textColor="@color/theme_color"
                android:textSize="@dimen/small" />

        </LinearLayout>

        <TextView
            android:id="@+id/contract_item_delete_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/item_content"
            android:background="#ff6161"
            android:gravity="center"
            android:padding="@dimen/dp_12"
            android:text="@string/delete"
            android:textColor="@android:color/white"
            android:textSize="@dimen/big_small" />

    </RelativeLayout>


</com.lightheart.sphr.doctor.view.SlidingButtonView>