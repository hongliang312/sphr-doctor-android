<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgound_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgound_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_70"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@android:color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/dp_4"
                android:paddingBottom="@dimen/dp_14"
                android:paddingEnd="@dimen/dp_60"
                android:paddingStart="@dimen/dp_14"
                android:paddingTop="@dimen/dp_14"
                android:textColor="@color/title_black"
                android:textSize="@dimen/big_small"
                tools:text="在患者端关注过您的患者，可以在这里显示哦" />

        </LinearLayout>

        <ImageView
            android:id="@+id/ivStutas"
            android:layout_width="@dimen/dp_34"
            android:layout_height="@dimen/dp_60"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_4"
            android:background="@mipmap/ic_recruiting"
            android:contentDescription="@string/trial_stage" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_05"
        android:background="@color/divide" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="@dimen/dp_14">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/trial_time"
            android:src="@mipmap/ic_cli_head" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dp_2"
                android:paddingTop="@dimen/dp_2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/dp_14"
                    android:paddingStart="@dimen/dp_14"
                    android:text="@string/trial_time"
                    android:textColor="@color/eight"
                    android:textSize="@dimen/small" />

                <TextView
                    android:id="@+id/tvTrialTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/theme_color"
                    android:textSize="@dimen/small"
                    tools:text="2017-12-12 —— 2017-12-12" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dp_2"
                android:paddingTop="@dimen/dp_2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/dp_14"
                    android:paddingStart="@dimen/dp_14"
                    android:text="@string/recruitment_number"
                    android:textColor="@color/eight"
                    android:textSize="@dimen/small" />

                <TextView
                    android:id="@+id/tvRecruitNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/theme_color"
                    android:textSize="@dimen/small"
                    tools:text="@string/num" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>