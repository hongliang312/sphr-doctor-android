<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingEnd="@dimen/dp_0"
    android:paddingStart="@dimen/dp_14">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <LinearLayout
            android:id="@+id/lll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_14"
            android:background="@color/backgound_color"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lll"
            android:layout_marginTop="@dimen/dp_28"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_10">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp_8"
                android:paddingTop="@dimen/dp_8"
                android:text="@string/research_target"
                android:textColor="@color/eight"
                android:textSize="@dimen/small" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_05"
                android:background="@color/divide" />

            <TextView
                android:id="@+id/tvResearchTarget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/dp_4"
                android:paddingBottom="@dimen/dp_8"
                android:paddingTop="@dimen/dp_8"
                android:textColor="@color/title_black"
                android:textSize="@dimen/small"
                tools:text="@string/research_target" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_05"
                android:background="@color/divide" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lll"
            android:layout_marginTop="-6dp"
            android:background="@mipmap/ic_nav"
            android:gravity="center"
            android:paddingEnd="@dimen/dp_4"
            android:paddingStart="@dimen/dp_8"
            android:text="@string/trial_base_detail"
            android:textColor="@android:color/white"
            android:textSize="@dimen/small" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_10"
        android:paddingTop="@dimen/dp_6">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/project_sponsor"
            android:textColor="@color/fiveEight"
            android:textSize="@dimen/small" />

        <TextView

            android:id="@+id/tvProjectSponsor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingEnd="@dimen/dp_0"
            android:paddingStart="@dimen/dp_10"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/small"
            tools:text="@string/num" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/project_contractor"
            android:textColor="@color/fiveEight"
            android:textSize="@dimen/small" />

        <TextView
            android:id="@+id/tvProjectOrganizers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingEnd="@dimen/dp_0"
            android:paddingStart="@dimen/dp_10"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/small"
            tools:text="@string/num" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/project_pi"
            android:textColor="@color/fiveEight"
            android:textSize="@dimen/small" />

        <TextView
            android:id="@+id/ProjectPi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingEnd="@dimen/dp_0"
            android:paddingStart="@dimen/dp_10"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/small"
            tools:text="@string/num" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/project_phase"
            android:textColor="@color/fiveEight"
            android:textSize="@dimen/small" />

        <TextView
            android:id="@+id/tvProjectStage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingEnd="@dimen/dp_0"
            android:paddingStart="@dimen/dp_10"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/small"
            tools:text="@string/num" />

    </LinearLayout>

</LinearLayout>