<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_6"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="@dimen/dp_14">

    <LinearLayout
        android:id="@+id/llTelConsult"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_54"
            android:layout_height="@dimen/dp_54"
            android:contentDescription="@string/tel_online"
            android:src="@mipmap/phone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_15"
            android:text="@string/tel_online"
            android:textSize="@dimen/small" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/dp_05"
        android:layout_height="match_parent"
        android:background="@color/divide" />

    <LinearLayout
        android:id="@+id/llOnlineConsult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_54"
            android:layout_height="@dimen/dp_54"
            android:contentDescription="@string/consult_online"
            android:src="@mipmap/xian" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_15"
            android:text="@string/consult_online"
            android:textSize="@dimen/small" />
    </LinearLayout>

</LinearLayout>