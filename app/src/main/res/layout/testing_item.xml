<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_3"
        android:background="@color/colorDayTextLight"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15">


        <TextView
            android:id="@+id/guan"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/big_medium"
            android:layout_margin="@dimen/dp_10"/>

        <ImageView
            android:id="@+id/deatil"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_20"
            android:src="@mipmap/details"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_10"
            />

        <TextView
            android:id="@+id/particulars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/particulars"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_below="@+id/deatil"
            android:textColor="@color/sky_blue"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15">

        <TextView
            android:id="@+id/diduntill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/biddingfortheunit"
            android:textSize="@dimen/big_small"
            />

        <TextView
            android:id="@+id/diduntil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ygxq"
            android:textSize="@dimen/big_small"
            android:layout_marginLeft="@dimen/dp_16"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/recruittt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recruit"
            android:textColor="@color/sky_blue"
            android:layout_marginLeft="@dimen/dp_15"
            android:textSize="@dimen/big_small"

            />

        <TextView
            android:id="@+id/recruit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/sky_blue"
            android:textSize="@dimen/big_small"
            android:layout_marginLeft="@dimen/dp_10"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:padding="@dimen/dp_15"
            android:textColor="@color/sky_blue"
            />

        <TextView
            android:id="@+id/testtt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/testingstage"
            android:textColor="@color/sky_blue"
            android:textSize="@dimen/big_small"

            />

        <TextView
            android:id="@+id/test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_15"
            android:textColor="@color/sky_blue"
            android:textSize="@dimen/big_small"

            />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_3"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@color/colorDayTextLight"
        />


</LinearLayout>