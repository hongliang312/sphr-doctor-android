<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--地址选择tabLayout字体大小-->
    <style name="AddressTabTextAppearance">
        <item name="android:textSize">@dimen/dp_16</item>
    </style>
    <!--地址选择recycleView字体样式-->
    <style name="AddressItemTextStyle">
        <item name="android:textSize">@dimen/dp_16</item>
        <item name="android:textColor">@color/black26</item>
        <item name="android:paddingTop">@dimen/dp_13</item>
        <item name="android:paddingBottom">@dimen/dp_13</item>
        <item name="android:paddingLeft">@dimen/dp_15</item>
    </style>


    <declare-styleable name="PageIndicator">
        <attr name="selected_color" format="color|reference" />
        <attr name="unselected_color" format="color|reference" />
        <attr name="count" format="integer" />
    </declare-styleable>

</resources>
